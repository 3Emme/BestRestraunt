@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;

<h1>Current Cuisine Options:</h1>

@if (@Model.Count == 0)
{
  <h3>No cuisines have been added yet!</h3>
}

@foreach (Cuisine cuisine in Model)
{
  <li>@cuisine.CuisineId . <a href="/cuisines/details/@cuisine.CuisineId"> @cuisine.CuisineName</a></li>
}

<p>@Html.ActionLink("Add a Cuisine","Create")</p>
<p>@Html.ActionLink("Go Home","Index","Home")</p>